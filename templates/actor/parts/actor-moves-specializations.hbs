<h3>Moves / Specializations</h3>
<div>
  <div class="grid">
    <span class="resource-label">Attack</span>
    <div class="grid grid-5col flex-group-center">
      {{#each system.moves.attack as |move id|}}
      <div>
        <label for="system.moves.attack.{{id}}.value" class="rollable" data-roll="d20+{{move.value}}"
          data-label="{{localize move.label}}">
          {{localize move.label}}
        </label>
        <input type="text" name="system.moves.attack.{{id}}.value" value="{{move.value}}" data-dtype="Number" />
      </div>
      {{/each}}
    </div>
  </div>
  <hr>
  <div class="grid">
    <span class="resource-label">Defense</span>
    <div class="grid grid-5col flex-group-center">
      {{#each system.moves.defense as |move id|}}
      <div>
        <label for="system.moves.defense.{{id}}.value" class="rollable" data-roll="d20+{{move.value}}"
          data-label="{{localize move.label}}">
          {{localize move.label}}
        </label>
        <input type="text" name="system.moves.defense.{{id}}.value" value="{{move.value}}" data-dtype="Number" />
      </div>
      {{/each}}
    </div>
  </div>
</div>
<hr>
<span class="resource-label">Disciplines</span>
<ol class='items-list'>
  {{#each disciplines as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <div class='item-name'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
      </div>
      <h4>{{item.name}}</h4>
    </div>
    <div class='item-controls'>
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' discipline'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' discipline'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
    <div class="flex-basis-100">
      <label>Specializations</label>
      {{#each item.system.specializations as |specilization key|}}
      <div class="flexrow">
        <input data-index="{{key}}" class="specialization"
          name="disciplines.{{id}}.system.specializations.{{key}}.value" type="text" value="{{specilization.value}}" />
      </div>
      {{/each}}
    </div>
  </li>
  {{/each}}
</ol>